<!DOCTYPE html>

<html lang="en">

<head>

    <!-- SITE TITTLE -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- PLUGINS CSS STYLE -->
    @Styles.Render("~/plugins/jquery-ui/jquery-ui.min.css")
    @Styles.Render("~/plugins/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/plugins/font-awesome/css/font-awesome.min.css")
    @Styles.Render("~/plugins/listtyicons/style.css")
    @Styles.Render("~/plugins/bootstrapthumbnail/bootstrap-thumbnail.css")
    @Styles.Render("~/lugins/datepicker/datepicker.min.css")
    @Styles.Render("~/plugins/selectbox/select_option1.css")
    @Styles.Render("~/plugins/owl-carousel/owl.carousel.min.css")
    @Styles.Render("~/plugins/fancybox/jquery.fancybox.pack.css")
    @Styles.Render("~/plugins/isotope/isotope.min.css")
    @Styles.Render("~/plugins/map/css/map.css")

    <!--Custom CSS-->
    @Styles.Render("~/Content/style_ClassAct.css")

    <!--GOOGLE FONT-->
    <link href="https://fonts.googleapis.com/css?family=Muli:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Herr+Von+Muellerhoff" rel="stylesheet">

    <!--FAVICON-->
    <link href="~/Template/Static HTML/img/favicon.png" rel="shortcut icon">

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
